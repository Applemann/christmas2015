
@{
    Layout = null;
    string domain = "http://" + Model.Url.Authority;
    //string domain = "http://skodachristmas2015.azurewebsites.net";
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <style type="text/css">
        /* Client-specific Styles */
        #outlook a {
            padding: 0;
        }
        /* Force Outlook to provide a "view in browser" button. */
        body {
            width: 100% !important;
        }

        .ReadMsgBody {
            width: 100%;
        }

        .ExternalClass {
            width: 100%;
        }
        /* Force Hotmail to display emails at full width */
        body {
            -webkit-text-size-adjust: none;
        }
        /* Prevent Webkit platforms from changing default text sizes. */

        /* Reset Styles */
        body {
            margin: 0;
            padding: 0px;
            background-color: #fff;
            font-family: Arial;
        }

        img {
            border: 0;
            height: auto;
            line-height: 100%;
            outline: none;
            text-decoration: none;
        }

        table td {
            border-collapse: collapse;
        }

        table {
            width: 100%;
        }

        #main-table {
            text-align: center;
            max-width: 600px;
        }

        #header-table {
            height: 74px;
        }

            #header-table td {
                vertical-align: top;
            }

        .green-link {
            color: #fff;
            font-weight: bold;
            background-color: #60b747;
            padding: 14px;
            text-decoration: none;
            display: inline-block;
            border-radius: 4px;
        }

        #footer-table p {
            margin: .5em 0;
        }

            #footer-table p img {
                vertical-align: middle;
            }
    </style>
</head>
<body leftmargin="0" marginwidth="0" topmargin="0" marginheight="0" offset="0" style="color:#000">
    <table id="main-table" border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" style="max-width:600px;margin: 0 auto">
        <tr>
            <td align="center" style="text-align: center">
                <table id="header-table" border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tr>
                        <td style="text-align: left" valign="top"><img src="@Html.Raw(domain)/Content/images/mail-logo.jpg" /></td>
                        <td style="text-align: right" valign="top"><img src="@Html.Raw(domain)/Content/images/simply-clever.png" /></td>
                    </tr>
                </table>
                <table id="content-table" border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tr>
                        <td style="text-align: center" align="center">
                            <img src="@Model.Form["image_path"]" style="width: 100%" />
                            <p style="padding:10px 0">@Html.Raw(SkodaChristmas2015.Resources.ChristmasDefault.EmailBody1) @Model.Form["name"]!</p>
                            <p style="padding:10px 0">@Html.Raw(SkodaChristmas2015.Resources.ChristmasDefault.EmailBody2)</p>
                            <br /><br />
                            <a href="@Html.Raw(domain)" class="green-link" style="color: #fff; font-weight: bold; background-color: #60b747; text-decoration: none; display: inline-block; border-radius: 4px;"><br />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.Raw(SkodaChristmas2015.Resources.ChristmasDefault.EmailYourCard)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<br /><br /></a> 
                            <br /><br />
                        </td>
                    </tr>
                </table>
                <table id="footer-table" border="0" cellpadding="0" cellspacing="0" width="100%">
                    @*<tr>
                        <td>&nbsp;</td>
                        <td style="text-align: right" align="right" valign="bottom"><img src="@Html.Raw(domain)/Content/images/mail-footer-mobile_top.png" style="display:block"/></td>
                    </tr>*@
                    <tr data-style="background-color: #e0e9f0;height: 96px;">
                        <td style="text-align: right;vertical-align: bottom" align="right" valign="bottom">
                            <p style="padding-bottom:10px">@Html.Raw(SkodaChristmas2015.Resources.ChristmasDefault.EmailBody3)</p>
                            <p style="vertical-align: bottom">@Html.Raw(SkodaChristmas2015.Resources.ChristmasDefault.EmailBody4) <a href="@Html.Raw(SkodaChristmas2015.Resources.ChristmasDefault.AppStore)"><img src="@Html.Raw(domain)/Content/images/dwn-button-app_store.png" alt="" style="width: 94px; vertical-align:middle"/></a> 
                            <a href="@Html.Raw(SkodaChristmas2015.Resources.ChristmasDefault.GooglePlay)"><img src="@Html.Raw(domain)/Content/images/dwn-button-google_play.png"  style="width: 94px; vertical-align:middle" /></a></p>
                        </td>
                        <td style="text-align: right; width:170px" align="right" valign="bottom"><img src="@Html.Raw(domain)/Content/images/mail-footer-mobile.png" style="display:block" alt="" /></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>